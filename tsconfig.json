{
    "compilerOptions": {
        "target": "ES2020",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "vite-env.d.ts", "OLD/leaf-file-editor copy.ts", "OLD/leaf-router copy KEEP FOR NOW.ts", "OLD/leaf-tabbed-pane.ts", "OLD/leaf-split.ts", "OLD/leaf-popup.ts", "OLD/leaf-grid-example.ts"],
    "types": ["node"],
}
